@inherits Web.Components.TopHeaderBase

@if (Result != null)
{

    <!-- Top Bar -->
    <div class="u-header__section u-header__section--hidden u-header__section--dark g-bg-black g-transition-0_3 g-py-10">
        <div class="container">
            <div class="row flex-column flex-sm-row justify-content-between align-items-center  g-font-weight-600 g-color-white g-font-size-12 g-mx-0--lg">
                <div class="col-auto">
                    <ul class="list-inline mb-0 g-hidden-xs-down">
                        @foreach (var item in Result.socialLink)
                        {
                            <li class="list-inline-item">
                                <a href="@item.FlatData.SocialUrl" title="@item.FlatData.SocialTitle" class="g-color-white g-color-primary--hover g-pa-3">
                                    <i class="@item.FlatData.SocialIconLinks.First().FlatData.SocialClass"></i>
                                </a>
                            </li>

                        }
                    </ul>
                </div>

                <div class="col-auto">
                </div>

                <div class="col-auto">
                </div>

                <div class="col-auto g-pos-rel">
                    <ul class="list-inline g-overflow-hidden g-pt-1 g-mx-minus-4 mb-0">

                        <i class="fa fa-clock-o g-font-size-18 g-valign-middle g-color-primary g-mr-10 g-mt-minus-2"></i>
                        @Result.workTime
                        <li class="list-inline-item g-mx-4 g-hidden-xs-down">|</li>
                        <li class="list-inline-item g-mx-4 g-hidden-xs-down ">
                            <i class="icon-envelope g-font-size-24 g-valign-middle g-color-primary g-mr-15"></i>
                            @Result.email
                        </li>
                        <li class="list-inline-item g-mx-4">|</li>
                        <li class="list-inline-item g-mx-4">
                            <i class="fa fa-phone g-font-size-18 g-valign-middle g-color-primary g-mr-10 g-mt-minus-2"></i>
                            @Result.mobile
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Top Bar -->
}