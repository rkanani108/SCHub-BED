@inherits FooterBase
@using Microsoft.AspNetCore.Html
@using Web
@using Web.Components

@if (Result != null)
{

    <!-- Footer -->
    <div id="contacts-section" class="g-bg-black-opacity-0_9 g-color-white-opacity-0_8 g-py-60">
        <div class="container">
            <div class="row">
                <!-- Footer Content -->
                <div class="col-lg-3 col-md-6 g-mb-40 g-mb-0--lg">
                    <div class="u-heading-v2-3--bottom g-brd-white-opacity-0_8 g-mb-20">
                        <h2 class="u-heading-v2__title h6 text-uppercase mb-0">@Result.AboutHeading</h2>
                    </div>

                    <p>@Result.AboutDescription</p>
                </div>
                <!-- End Footer Content -->
                <!-- Footer Content -->
                <div class="col-md-6 col-lg-3">
                    <div class="u-heading-v2-3--bottom g-brd-white-opacity-0_8 g-mb-20">
                        <h2 class="u-heading-v2__title h6 text-uppercase mb-0">@Result.PhotoHeading</h2>
                    </div>
                    <ul class="u-list-inline d-flex flex-wrap g-mr-minus-15">
                        @if (Result.PhotoImageLinks != null)
                        {
                            foreach (var item in Result.PhotoImageLinks)
                            {
                                <li class="list-inline-item g-mr-10 g-mb-10">
                                    <a class="u-block-hover js-fancybox-footer u-link-v2" data-fancybox="lightbox-gallery--32" data-src="@(item.FlatData.Image.FirstOrDefault().Url)" data-caption="Our Project Gallery">
                                        <img class="u-block-hover__main--grayscale g-width-80 g-height-80" src="@(item.FlatData.Image.FirstOrDefault().Url)?width=100&height=100&func=crop" alt="Image Description">
                                    </a>
                                </li>
                            }

                        }
                    </ul>
                </div>

                <!-- End Footer Content -->
                <!-- Footer Content -->
                <div class="col-lg-3 col-md-6 g-mb-40 g-mb-0--lg">
                    <div class="u-heading-v2-3--bottom g-brd-white-opacity-0_8 g-mb-20">
                        <h2 class="u-heading-v2__title h6 text-uppercase mb-0">@Result.UsefulLinkHeading</h2>
                    </div>

                    <nav class="text-uppercase1">
                        <ul class="list-unstyled g-mt-minus-10 mb-0">
                            @if (Result.UsefulPageLinks != null)
                            {
                                foreach (var item in Result.UsefulPageLinks)
                                {
                                    <li class="g-pos-rel g-brd-bottom g-brd-white-opacity-0_1 g-py-10">
                                        <h4 class="h6 g-pr-20 mb-0">
                                            <a class="g-color-white-opacity-0_8 g-color-white--hover" href="@item.FlatData.Link">@item.FlatData.Text</a>
                                            <i class="fa fa-angle-right g-absolute-centered--y g-right-0"></i>
                                        </h4>
                                    </li>
                                }
                            }
                        </ul>
                    </nav>
                </div>
                <!-- End Footer Content -->
                <!-- Footer Content -->
                <div class="col-lg-3 col-md-6">
                    <div class="u-heading-v2-3--bottom g-brd-white-opacity-0_8 g-mb-20">
                        <h2 class="u-heading-v2__title h6 text-uppercase mb-0">@Result.ContactHeading</h2>
                    </div>

                    <address class="g-bg-no-repeat g-font-size-12 mb-0" style="background-image: url(assets/img/maps/map2.png);">
                        <!-- Location -->
                        <div class="d-flex g-mb-20">
                            <div class="g-mr-10">
                                <span class="u-icon-v3 u-icon-size--xs g-bg-white-opacity-0_1 g-color-white-opacity-0_6">
                                    <i class="fa fa-map-marker"></i>
                                </span>
                            </div>
                            <p class="mb-0">
                                @Result.Address
                            </p>
                        </div>
                        <!-- End Location -->
                        <!-- Phone -->
                        <div class="d-flex g-mb-20">
                            <div class="g-mr-10">
                                <span class="u-icon-v3 u-icon-size--xs g-bg-white-opacity-0_1 g-color-white-opacity-0_6">
                                    <i class="fa fa-phone"></i>
                                </span>
                            </div>
                            <p class="mb-0">@Result.Mobile</p>
                        </div>
                        <!-- End Phone -->
                        <!-- Email and Website -->
                        <div class="d-flex g-mb-20">
                            <div class="g-mr-10">
                                <span class="u-icon-v3 u-icon-size--xs g-bg-white-opacity-0_1 g-color-white-opacity-0_6">
                                    <i class="fa fa-globe"></i>
                                </span>
                            </div>
                            <p class="mb-0">

                                @Result.EmailWebsite
                            </p>
                        </div>
                        <!-- End Email and Website -->
                    </address>
                </div>
                <!-- End Footer Content -->
            </div>
        </div>
    </div>
    <!-- End Footer -->

    <!-- Copyright Footer -->
    <footer class="g-bg-gray-dark-v1 g-color-white-opacity-0_8 g-py-20">
        <div class="container">
            <div class="row">
                <div class="col-md-8 text-center text-md-left g-mb-10 g-mb-0--md">
                    <div class="d-lg-flex">
                        <small class="d-block g-font-size-default g-mr-10 g-mb-10 g-mb-0--md">@DateTime.Now.Year  @Result.CopyrightText</small>
                    </div>
                </div>

                <div class="col-md-4 align-self-center">
                    <ul class="list-inline text-center text-md-right mb-0">
                        @if (Result.SocialLinks != null)
                        {
                            foreach (var item in Result.SocialLinks)
                            {
                                <li class="list-inline-item g-mx-10" data-toggle="tooltip" data-placement="top" title="@item.FlatData.SocialTitle">
                                    <a href="@item.FlatData.SocialUrl" class="g-color-white-opacity-0_5 g-color-white--hover">
                                        <i class="@item.FlatData.SocialIconLinks.FirstOrDefault().FlatData.SocialClass"></i>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <!-- End Copyright Footer -->
    <a class="js-go-to u-go-to-v1 animated js-animation-was-fired zoomIn" href="#" data-type="fixed" data-position="{
     &quot;bottom&quot;: 15,
     &quot;right&quot;: 15
   }" data-offset-top="400" data-compensation="#js-header" data-show-effect="zoomIn" style="display: inline-block; position: fixed; bottom: 15px; right: 15px;">
        <i class="hs-icon hs-icon-arrow-top"></i>
    </a>

}