@page "/portfolio"
@model Web.Pages.PortfolioModel
@using Web.Helper;
@{
    ViewData["Title"] = "Portfolio";
    Web.Helper.AppContext.PageTitle = "Portfolio";
    var Result = Model.Result;
}

@if (Result != null)
{
    <!--Start Hero-->
    <section>
        <div class="g-bg-img-hero g-mt-130" style="background-image: url(../../../assets/include/svg/svg-bg3.svg);">
            <div class="container g-py-100 g-py-150--lg">
                <div class="row align-items-lg-center">
                    <div class="col-lg-6 g-mb-70 g-mb-150--sm g-mb-50--lg">
                        <div class="g-pr-15--lg">
                            <!-- Promo Block Info -->
                            <div class="mb-5">
                                <h1 class="g-color-black g-font-size-45 mb-3">@Result.HeroHeading</h1>
                                <p>@Result.HeroDescription</p>
                            </div>
                            <a class="btn btn-md u-btn-inset u-btn-inset--rounded u-btn-bluegray g-font-weight-600 g-letter-spacing-0_5 text-uppercase g-brd-2 g-rounded-50 g-mr-10 g-mb-15" href="@Result.HeroCtaButtonLink1"><i class="fa fa-search g-mr-3"></i> @Result.HeroCtaButtonText1</a>
                            <a class="btn btn-md u-btn-inset u-btn-inset--rounded u-btn-cyan g-font-weight-600 g-letter-spacing-0_5 text-uppercase g-brd-2 g-rounded-50 g-mr-10 g-mb-15" href="@Result.HeroCtaButtonLink2" data-target="#content"><i class="fa fa-phone g-mr-3"></i> @Result.HeroCtaButtonText2</a>
                            <!-- End Promo Block Info -->
                        </div>
                    </div>

                    <div class="col-lg-6 g-mb-50">
                        <div class="g-max-width-550 g-pos-rel g-pl-15--lg mx-auto">
                            <!-- Promo Block Images -->
                            <div class="u-shadow-v36 g-max-width-300--sm g-pos-rel g-z-index-2 g-mb-20 g-mb-0--sm">
                                <img class="img-fluid g-brd-around g-brd-4 g-brd-white rounded" src="@UrlHelper.cdn(Result.HeroImage1.First().Url)?w=292&h=170&func=crop" alt="Image Description">
                            </div>

                            <div class="u-shadow-v36 g-max-width-300--sm g-pos-abs--sm g-top-minus-70 g-left-130 g-z-index-1 g-mb-20 g-mb-0--sm">
                                <img class="img-fluid g-brd-around g-brd-4 g-brd-white rounded" src="@UrlHelper.cdn(Result.HeroImage2.First().Url)?w=292&h=170&func=crop" alt="Image Description">
                            </div>

                            <div class="u-shadow-v36 g-max-width-300--sm g-pos-abs--sm g-top-65 g-right-0">
                                <img class="img-fluid g-brd-around g-brd-4 g-brd-white rounded" src="@UrlHelper.cdn(Result.HeroImage3.First().Url)?w=292&h=170&func=crop" alt="Image Description">
                            </div>
                            <!-- End Promo Block Images -->
                            <!-- SVG Square #1 -->
                            <svg class="g-hidden-xs-down g-width-25 g-height-45 g-pos-abs g-bottom-minus-40 g-left-0 g-z-index-2" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 45.9 52.9" enable-background="new 0 0 45.9 52.9" xml:space="preserve">
                            <polygon fill="#7cd1d8" stroke="#FFFFFF" stroke-width="0.4" stroke-miterlimit="10" points="45.8,39.5 23.1,52.8 0.2,39.7
                  0.1,13.4 22.9,0.1 45.7,13.2 "></polygon>
                            <polyline fill="#7cd1d8" stroke="#FFFFFF" stroke-width="0.4" stroke-miterlimit="10" points="0.1,13.5 23.1,26.4 23.1,52.8 "></polyline>
                            <line fill="#7cd1d8" stroke="#FFFFFF" stroke-width="0.4" stroke-miterlimit="10" x1="45.5" y1="13.2" x2="23" y2="26.5"></line>
              </svg>
                            <!-- End SVG Square #1 -->
                            <!-- SVG Square #3 -->
                            <svg class="g-hidden-xs-down g-width-60 g-height-80 g-pos-abs g-top-minus-40 g-right-0 g-z-index-2" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 52.8 47.5" enable-background="new 0 0 52.8 47.5" xml:space="preserve">
                            <polygon fill="#FFFFFF" stroke="#7cd1d8" stroke-width="0.25" stroke-miterlimit="10" points="14.8,47.3 0.1,25.5 11.8,1.9 38,0.1
                  52.7,22 41,45.6 "></polygon>
                            <polyline fill="#FFFFFF" stroke="#7cd1d8" stroke-width="0.25" stroke-miterlimit="10" points="37.9,0.1 26.5,23.8 0.2,25.5 "></polyline>
                            <line fill="#FFFFFF" stroke="#7cd1d8" stroke-width="0.25" stroke-miterlimit="10" x1="41" y1="45.4" x2="26.4" y2="23.7"></line>
              </svg>
                            <!-- End SVG Square #3 -->
                            <!-- SVG Square #4 -->
                            <svg class="g-hidden-xs-down g-width-50 g-height-20 g-pos-abs g-top-minus-120 g-right-100" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 73.5 20" enable-background="new 0 0 73.5 20" xml:space="preserve">
                            <g>
                            <path fill="none" stroke="#9a69cb" stroke-width="3" stroke-miterlimit="10" d="M0,1c9.2,0,9.2,18,18.4,18c9.2,0,9.2-18,18.4-18
                    c9.2,0,9.2,18,18.4,18S64.3,1,73.5,1"></path>
                </g>
              </svg>
                            <!-- End SVG Square #4 -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--End Hero-->
    <!-- Start Project Block -->
    <section class="container g-mt-80">
        <header class="text-center g-width-60x--md mx-auto g-my-40">
            <div class="u-heading-v2-3--bottom g-brd-primary g-mb-20">
                <h2 class="h4 u-heading-v2__title g-color-gray-dark-v2 g-font-weight-600 text-uppercase">@Result.RecentProjectHeading</h2>
            </div>
            <p class="g-font-size-16">@Result.RecentProjectDescription</p>
        </header>
        <div class="row">
            @foreach (var item in Result.RecentProjectLinks)
            {
                <div class="col-lg-6 g-mb-40">
                    <!-- Article -->
                    <article class="g-bg-size-cover" data-bg-img-src="@UrlHelper.cdn(item.FlatData.Image.First().Url)?w=540&h=360&func=crop">
                        <div class="w-100 g-min-height-360 g-flex-middle g-width-50x--md g-bg-primary-opacity-0_4 g-pa-25 ml-auto">
                            <div class="g-flex-middle-item">
                                <h4 class="h5 g-color-white g-font-weight-700 text-uppercase g-mb-10">@item.FlatData.Name</h4>
                                <p class="g-color-white-opacity-0_9 mb-0">@item.FlatData.ProjectDescription</p>
                            </div>
                        </div>
                    </article>
                    <!-- End Article -->
                </div>
            }
        </div>
    </section>
    <!-- End Project Block -->

    <section class="dzsparallaxer auto-init height-is-based-on-content use-loading g-my-80 mode-scroll loaded dzsprx-readyall" data-options="{direction: 'reverse', settings_mode_oneelement_max_offset: '150'}">
        <div class="divimage dzsparallaxer--target w-100 g-bg-repeat" style="height: 200%; background-image: url(&quot;assets/img/bg/pattern4.png&quot;); transform: translate3d(0px, -93.3394px, 0px);"></div> <div class="container">
            <div class="row g-py-50">

                <div class="col-lg-8 align-self-lg-center">
                    <h2 class="text-uppercase">@Result.CtaBlockLink.First().FlatData.CtaHeading</h2>
                    <p class="lead g-mb-20 g-mb-0--lg">@Result.CtaBlockLink.First().FlatData.CtaDescription</p>
                </div>

                <div class="col-lg-4 align-self-lg-center">
                    <a class="btn btn-md u-btn-inset u-btn-bluegray g-mr-10 g-mb-15" href="@Result.CtaBlockLink.First().FlatData.CtaButtonLink1"><i class="fa fa-search g-mr-3"></i> @Result.CtaBlockLink.First().FlatData.CtaButtonText1</a>
                </div>
            </div>
        </div>
    </section>

    <section class="g-py-80 colorful-bg">
        <div class="container">
            <div class="row justify-content-center g-mb-60">
                <div class="col-lg-7">
                    <!-- Heading -->
                    <div class="text-center">
                        <h2 class="h3 g-color-black text-uppercase mb-2">@Result.ProjectHeading</h2>
                        <div class="d-inline-block g-width-35 g-height-2 g-bg-primary mb-2"></div>
                        <p class="lead mb-0">@Result.ProjectDescription</p>
                    </div>
                    <!-- End Heading -->
                </div>
            </div>

            <div id="shortcode16">
                <div class="shortcode-html">
                    <div class="row no-gutters">

                        @foreach (var item in Result.ProjectLinks)
                        {
                            <div class="col-md-4 g-mb-30 g-mb-0--md">
                                <article class="text-center u-block-hover g-bg-gray-dark-v2--hover g-transition-0_4">
                                    <figure>
                                        <img class="img-fluid" src="@UrlHelper.cdn(item.FlatData.Image.First().Url)?w=370&h=246&func=crop" alt="Image Description">
                                    </figure>
                                    <h3 class="h5 text-uppercase g-font-weight-600 g-letter-spacing-2 g-color-white--hover g-pa-30-20 g-mb-0">
                                        <em class="d-block g-font-size-12 g-font-weight-600 g-font-style-normal g-font-weight-300 g-color-primary--hover g-mb-10">@item.FlatData.Type</em> @item.FlatData.Name
                                    </h3>
                                    <a class="js-fancybox u-link-v2" href="javascript:;" data-fancybox="lightbox-gallery--16" data-src="@UrlHelper.cdn(item.FlatData.Image.First().Url)" data-caption="Lightbox Gallery">
                                    </a>
                                </article>
                            </div>
                        }
                    </div>
                </div>

                <div class="shortcode-styles">
                    <!-- CSS Implementing Plugins -->
                    <link type="text/plain" rel="stylesheet" href="assets/vendor/icon-hs/style.css">
                    <link type="text/plain" rel="stylesheet" href="assets/vendor/fancybox/jquery.fancybox.min.css">
                </div>

                <div class="shortcode-scripts">
                    <!-- JS Implementing Plugins -->
                    <script type="text/plain" src="assets/vendor/fancybox/jquery.fancybox.min.js">
                    </script>

                    <!-- JS Company -->
                    <script type="text/plain" src="assets/js/components/hs.popup.js">
                    </script>

                    <!-- JS Plugins Init. -->
                    <script type="text/plain">
                        $(document).on('ready', function () {
                        // initialization of popups
                        $.HSCore.components.HSPopup.init('.js-fancybox')
                        });
                    </script>
                </div>
            </div>
        </div>
    </section>

    var ctaHeadPart = Result.CtaContactLink.First().FlatData.CtaHeading.Split("|");

    <section class="g-bg-gray-light-v5 g-my-60 g-py-80 g-px-30">
        <div class="container">
            <div class="row">
                <div class="col-md-9 align-self-center">
                    <h3 class="h4">
                        @ctaHeadPart[0]&nbsp;<a class="g-color-primary" href="mailto:@Result.CtaBlockLink.First().FlatData.CtaEmail">@Result.CtaContactLink.First().FlatData.CtaEmail</a>
                        &nbsp;@ctaHeadPart[1]
                        <a class="g-color-primary" href="tel:@Result.CtaContactLink.First().FlatData.CtaMobileNumber"> @Result.CtaContactLink.First().FlatData.CtaMobileNumber</a>
                    </h3>
                    <p class="lead g-mb-20 g-mb-0--md">@Result.CtaContactLink.First().FlatData.CtaDescription</p>
                </div>

                <div class="col-md-3 align-self-center text-md-right">
                    <a class="btn btn-md u-btn-inset u-btn-cyan g-mr-10 g-mb-15" href="@Result.CtaContactLink.First().FlatData.CtaButtonLink1"><i class="fa fa-phone g-mr-3"></i> @Result.CtaContactLink.First().FlatData.CtaButtonText1</a>
                </div>
            </div>
        </div>
    </section>
}